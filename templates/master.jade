block vars
  - var bodyclass = null;
block dependencies
    include ../mixins/post.jade
    include ../mixins/pagination.jade
doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(content='width=device-width, initial-scale=1.0' name='viewport')
            title
                block title
                  = locals.name
            link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='stylesheet', href='/static/stylesheets/styles.css')
            script(src="/static/libs/modernizr/modernizr.min.js")
    body(class=bodyclass)
        header.site-header(role="banner")
            h1.site-logo
                a(href="/")= locals.name
        section.page-content(role="main")
            block content
        script(data-main="/static/scripts/app.min.js" src="/static/libs/requirejs/require.js")


