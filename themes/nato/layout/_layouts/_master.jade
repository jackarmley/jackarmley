block dependencies
    include ../_data/_dependancies
block viewclass
    -var viewclass = '';
    if page.layout
        -viewclass = 'view-' + page.layout;
doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(content='width=device-width, initial-scale=1.0' name='viewport')
            title
                block title
                    != config.title
            link(rel='stylesheet', href='/static/styles/styles.css')
            script(src="/static/libs/modernizr/modernizr.min.js")
    body(class=viewclass)
        block siteheader
            header.site-header(role="banner" aria-label="Site header")
                .site-header-inner
                    span.site-navtoggle
                    a.site-logo(href=config.root aria-label='Home')= config.title
        main.page-content(role="main" aria-label="Page content")
            block content
        footer.site-footer(role="contentinfo" aria-label="Site footer")
            .site-footer-inner
                h2 Elsewhere&hellip;
                ul.followme
                    each val, index in site.data.social
                        li.followme-link(data-link=index)
                            a(href=val.url aria-label=val.a11yLabel + ' (opens an external site)')
                                span(aria-hidden="true")= val.visibleLabel
        block scripts
            script(src="/static/scripts/app.js")



