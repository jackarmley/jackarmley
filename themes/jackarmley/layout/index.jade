extends _layouts/_master

block viewclass
    if is_category() === true
        -var viewclass = 'view-' + url_for(path).split('/')[2];

block content

    if is_category() != true
        section.page-section.home-intro
            .page-section-inner
                p
                    | I love hand-crafting websites
                    | that people love to use.
        .page-section
            +postlisting(page,false)

    else
        //- Get category name
        -var categoryname = url_for(path).split('/')[2];
        //- Set markup
        section
            header.page-header
                .page-header-inner
                    h1.page-title= categoryname
            .page-section
                +postlisting(page,true)


