block dependencies
    include ../_data/_dependancies

block viewclass
    -var viewclass = '';
    if page.layout
        -viewclass = 'view-' + page.layout;


doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(content='width=device-width, initial-scale=1.0' name='viewport')
            title
                block title
                    != config.title
            link(rel='stylesheet', href='/static/styles/styles.css')
            script(src="/static/libs/modernizr/modernizr.min.js")
    body(class=viewclass)
        block siteheader
            header.site-header(role="banner" aria-label="Site header")
                .site-header-inner
                    span.site-navtoggle
                    h1.site-logo: a(href=config.root)= config.title
                    nav.site-navigation(role="navigation" aria-label="Site navigation")
                        ul
                            each val,index in site.data.sitenav
                                li
                                    if val == url_for(path)
                                        -var current = {'class':'state--current'};
                                    else
                                        -var current = false;
                                    a(href=val)&attributes(current)= index
        main.page-content(role="main" aria-label="Page content")
            block content
        footer.site-footer(role="contentinfo" aria-label="Site footer")
            .site-footer-inner
                h2 Elsewhere&hellip;
                ul.followme
                    each val, index in site.data.social
                        li.followme-link(data-link=index): a(href=val.url): span= val.label
        script(data-main="/static/scripts/app" src="/static/libs/requirejs/require.js")



