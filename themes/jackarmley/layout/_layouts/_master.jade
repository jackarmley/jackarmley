block dependencies
    include ../_partials/_post
    include ../_partials/_pagination

block viewclass
    -var viewclass = '';
    -if(page.layout)
        -var viewclass = 'view-' + page.layout;
    -else
        -var viewclass = 'view-home';


doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(content='width=device-width, initial-scale=1.0' name='viewport')
            title
                block title
                    != config.title
            link(rel='stylesheet', href='/static/styles/styles.css')
            script(src="/static/libs/modernizr/modernizr.min.js")
            script(src="https://code.jquery.com/jquery-1.11.3.min.js")
    body(class=viewclass)
        header.site-header(role="banner" aria-label="Site header")
            .site-header-inner
                h1.site-logo: a(href=config.root)= config.title
                nav.site-navigation(role="navigation" aria-label="Site navigation")
                    ul
                        each page in [['Work','/categories/work'],['Notes','/categories/notes']]
                            li: a(href=page[1])= page[0]
        main.page-content(role="main" aria-label="Page content")
            block content
        footer.site-footer(role="contentinfo" aria-label="Site footer")
            .site-footer-inner
                h2 Find me on
                ul.followme
                    each value in [['twitter','http://twitter.com/jackarmley'],['codepen','http://codepen.io/jackarmley'],['github','http://github.com/jackarmley']]
                        li.followme-link: a(href=value[1])= value[0]


